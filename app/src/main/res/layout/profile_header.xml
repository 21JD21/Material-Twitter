<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:id="@+id/profile_wrapper">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/banner_layout"
            android:orientation="vertical"
            >
        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/profile_picture"
            android:elevation="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_big_name"
            android:text="name test"
            android:layout_toRightOf="@id/profile_picture"
            android:layout_below="@id/banner_layout"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/main_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_big_screenname"
            android:text="screenname test"
            android:layout_toRightOf="@id/profile_picture"
            android:layout_below="@id/activity_profile_big_name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/profile_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_picture"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_summary"
            android:layout_below="@id/profile_description"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Tweets"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/tweets_label"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="1042"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/tweets_count"
                    android:layout_below="@id/tweets_label"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/followers_label"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Followers"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/followers_count"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="222"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_below="@id/followers_label"
                android:layout_centerHorizontal="true"
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/following_label"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Following"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/following_count"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="300"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/following_label"
                />

            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>